{% extends 'adminBase.html.twig' %}

{% block title %}
	List of Formations
{% endblock %}

{% block main %}
	
		<div class="d-flex flex-column gap-4">
			<div class="d-flex justify-content-between">
				<h2 class="rounded bg-dark text-light p-3  ">Liste des Matieres</h2>
				<a href="{{ path('adminHome') }}" class="btn btn-light h-50">Retour a l'accueil</a>
			</div>

			<table class="table table-striped rounded m-auto text-center">
				<thead>
					<tr>
						<th>Nom</th>
						<th></th>
						<th></th>
					</tr>
				</thead>
				<tbody class="table-group-divider">
					{% for matiere in matieres  %}
						<tr>
							<td>{{ matiere.nom }}</td>
							<td>
								<a href="{{ path('adminModifierMatiere', {'matiereId': matiere.id})}}">
									<button class="btn btn-secondary">Modifier le programme</button>
								</a>
							</td>
							<td>
								<a href="{{ path('adminSupprimerMatiere', {'matiereId': matiere.id})}}" class="btn btn-danger">Supprimer</a>
							</td>
	
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>


{% endblock %}
