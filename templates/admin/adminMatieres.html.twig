{% extends 'adminBase.html.twig' %}

{% block title %}
	List of Formations
{% endblock %}

{% block main %}
	<a href="{{ path('adminHome') }}" class="btn btn-secondary btn-sm m-2">Retour a l'accueil</a>
	<div class="container rounded d-flex flex-column justify-content-center text-center gap-4">
		<h1 class="rounded bg-dark text-light p-3 w-50 m-auto text-center">Liste des Matieres</h1>
		<table class="table table-striped w-50 rounded m-auto">
			<thead>
				<tr>
					<th>Nom</th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody class="table-group-divider">
				{% for matiere in matieres  %}
					<tr>
						<td>{{ matiere.nom }}</td>
						<td>
							<a href="{{ path('adminModifierMatiere', {'matiereId': matiere.id})}}">
								<button class="btn btn-secondary">Modifier le programme</button>
							</a>
						</td>
						<td>
							<a href="{{ path('adminSupprimerMatiere', {'matiereId': matiere.id})}}" class="btn btn-danger">Supprimer</a>
						</td>

					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>


{% endblock %}
