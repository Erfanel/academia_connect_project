{% extends 'adminBase.html.twig' %}

{% block title %}
	List of Users
{% endblock %}

{% block main %}
	<a href="{{ path('adminHome') }}" class="btn btn-secondary btn-sm m-2">Retour a l'accueil</a>
	<div class="container rounded d-flex flex-column justify-content-center text-center gap-4">
		<h1 class="rounded bg-dark text-light p-3 w-50 m-auto text-center">Liste des utilisateurs</h1>
		<table class="table table-striped w-75 rounded m-auto">
			<thead>
				<tr>
					<th>Nom</th>
					<th>Prenom</th>
					<th>Email</th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody class="table-group-divider">
				{% for utilisateur in utilisateurs %}
					<tr>
						<td>{{ utilisateur.nom }}</td>
						<td>{{ utilisateur.prenom }}</td>
						<td>{{ utilisateur.email }}</td>
						<td>
							<a href="{{ path('adminModifierUtilisateur', {'utilisateurId': utilisateur.id}) }}" class="btn btn-secondary disabled" >Modifier (TODO)</a>
						</td>
						<td>
							<a href="{{ path('adminSupprimerUtilisateur', {'utilisateurId': utilisateur.id}) }}" class="btn btn-danger disabled" >Supprimer (TODO)</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

	</div>
{% endblock %}
