{% extends 'adminBase.html.twig' %}

{% block title %}
	Modifier l'utilisateur
{% endblock %}

{% block main %}
	<div class="d-flex flex-column gap-3">
		<div class="d-flex justify-content-between">
			<h2 class="rounded bg-dark text-light p-3">Modifier un utilisateur</h2>
			<div class="d-flex gap-3">
				<a href="{{ path('adminHome') }}" class="btn btn-light h-50">Retour a l'accueil admin</a>
				<a href="{{ path('adminUtilisateurs') }}" class="btn btn-light h-50">Retour a la liste des utilisateurs</a>
			</div>

		</div>
		<form action="{{ path('adminModifierUtilisateur', {'utilisateurId': utilisateur.id}) }}" method="post" class=" bg-light p-3">
			{{ form_start(form) }}
			{{ form_widget(form) }}
			<input type="submit" class="btn btn-success">
			{{ form_end(form) }}
		</form>
	</div>

{% endblock %}
