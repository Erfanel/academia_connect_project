{% extends 'adminBase.html.twig' %}

{% block title %}Modifier le programme
{% endblock %}

{% block main %}
	<div  class="d-flex flex-column gap-4">
	<div class="d-flex justify-content-between">
		<h2 class="rounded bg-dark text-light p-3">{{ matiere.nom }} / Modifier</h2>
		<div class="d-flex gap-3">
			<a href="{{ path('adminMatieres') }}" class="btn btn-light h-50"> Retour a la page {{ matiere.nom }}</a>
		<a href="{{ path('adminHome') }}" class="btn btn-light h-50">Retour Ã  l'accueil formateur</a>
		</div>
		
	</div>
		<form action="{{ path('adminModifierMatiere', {'matiereId': matiere.id}) }}" method="post" class=" bg-light p-3">
			{{ form_start(form) }}
			{{ form_errors(form) }}
			{{ form_row(form.programme) }}
	        <div style="display: none;">
			{{ form_row(form.formateur) }}
			{{ form_row(form.formation) }}
	        {{ form_row(form.nom) }}
			</div>
			<input type="submit" class="btn btn-success">
			{{ form_end(form) }}
		</form>
		
	</div>

{% endblock %}
