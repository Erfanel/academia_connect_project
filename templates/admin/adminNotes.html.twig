{% extends 'base.html.twig' %}

{% block title %}
	List of Formations
{% endblock %}

{% block body %}
	<a href="{{ path('adminHome') }}">Retour a l'accueil</a>
	<h1>Liste des notes</h1>
	<table>
		<tr>
			<th>Evaluation</th>
			<th>Apprenant</th>
			<th>Note</th>
		</tr>
		{% for note in notes %}
			<tr>
				<td>
					{{ note.evaluation }}
				</td>
				<td>{{ note.apprenant.nom }}
					{{ note.apprenant.prenom }}</td>

				<td>
					{{ note.note }}
				</td>
				<td> <a href="{{ path('adminModifierNote', {'noteId': note.id}) }}">Modifier</a></td>
				<td> <a href="{{ path('adminSupprimerNote', {'noteId': note.id}) }}">Supprimer</a></td>

			</tr>
		{% endfor %}
	</table>


{% endblock %}
