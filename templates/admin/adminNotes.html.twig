{% extends 'adminBase.html.twig' %}

{% block title %}
	List of Formations
{% endblock %}

{% block main %}
	<a href="{{ path('adminHome') }}" class="btn btn-secondary btn-sm m-2">Retour a l'accueil</a>
	<div class="row">
		<div class="col-sm-9 col-lg-5 container d-flex flex-column justify-content-center text-center gap-4">
			<h1 class="rounded bg-dark text-light p-3 m-auto text-center">Liste des notes</h1>
			<table class="table table-striped  rounded m-auto">
				<thead>
					<tr>
						<th>Evaluation</th>
						<th>Apprenant</th>
						<th>Note</th>
						<th></th>
						<th></th>
					</tr>
				</thead>
				<tbody class="table-group-divider">
					{% for note in notes %}
						<tr>
							<td>
								{{ note.evaluation }}
							</td>
							<td>{{ note.apprenant.nom }}
								{{ note.apprenant.prenom }}</td>
			
							<td>
								{{ note.note }}
							</td>
							<td> <a href="{{ path('adminModifierNote', {'noteId': note.id}) }}" class="btn btn-secondary">Modifier</a></td>
							<td> <a href="{{ path('adminSupprimerNote', {'noteId': note.id}) }}" class="btn btn-danger">Supprimer</a></td>
			
						</tr>
					{% endfor %}
				</tbody class="table-group-divider">
			</table>
		</div>
	</div>


{% endblock %}
