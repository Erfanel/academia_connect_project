{% extends 'formateurBase.html.twig' %}

{% block title %}Modifier le programme
{% endblock %}

{% block main %}
	<a href="{{ path('formateurMatiere', {'matiereId': matiere.id, 'formationId': formation.id}) }}" class="btn btn-secondary btn-sm m-2">Retour Ã  la page
		{{ matiere.nom }}</a>

	<div class="container rounded  gap-3">
		<h1 class="rounded bg-dark text-center text-light p-3  w-50 m-auto mb-3">{{matiere.nom}}</h1>

		<form action="{{ path('formateurModifierProgramme', {'matiereId': matiere.id, 'formationId': formation.id}) }}" method="post" >
			{{ form_start(form) }}
			{{ form_errors(form) }}
			{{ form_row(form.programme) }}
			<div style="display: none;">
				{{ form_row(form.formateur) }}
				{{ form_row(form.formation) }}
				{{ form_row(form.nom) }}
			</div>
			<input type="submit" value="Valider" class="btn btn-success">
			{{ form_end(form) }}
		</form>
	</div>
	

{% endblock %}
