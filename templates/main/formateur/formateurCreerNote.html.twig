{% extends 'formateurBase.html.twig' %}

{% block title %}Formations Formateur
{% endblock %}

{% block main %}
	<a href="{{ path('formateurApprenant', {'apprenantId': apprenant.id, 'formationId': apprenant.formationSuivie.id})}}" class="btn btn-secondary btn-sm m-2">Retour au profil de
		{{ apprenant.prenom }}
		{{ apprenant.nom }}</a>

	
	<div class="container rounded w-50 d-flex flex-column justify-content-center text-center gap-3">
		<div class="rounded bg-dark text-light p-2 ">
			<h1>Ajouter une note
			</h1>
			<p>
				pour {{ apprenant.prenom }} {{ apprenant.nom }}
			</p>
		</div>

		<form action="{{ path('formateurCreerNote', {'apprenantId': apprenant.id, 'formationId': apprenant.formationSuivie.id}) }}" method="post" class="w-50 m-auto">
			{{ form_start(form) }}
			{{ form_row(form.evaluation) }}
			{{ form_row(form.note, {'type': 'number', 'attr': {'min': 0, 'max': 20}}) }}
			<div style="display: none;">
				{{ form_row(form.apprenant, {'value': apprenant.id }) }}
			</div>
			{{ form_widget(form) }}
			<input type="submit" class="btn btn-success" value="Valider">
			{{ form_end(form) }}
		</form>

	</div>
	
{% endblock %}
