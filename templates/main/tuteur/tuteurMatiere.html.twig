{% extends 'tuteurBase.html.twig' %}

{% block title %}Matière Selectionnée
{% endblock %}

{% block main %}
	<a href="{{ path('tuteurApprenant', {'apprenantId': apprenant.id})}}" class="btn btn-secondary btn-sm m-2">Retour au profil de
		{{ apprenant.prenom }}
		{{ apprenant.nom }}</a>

	<div class="container rounded d-flex flex-column justify-content-center text-center gap-3">
		<h1 class="rounded bg-dark text-light p-3 w-50 m-auto ">
			{{ matiere.nom }}</h1>
		<div>
			<h2 class="rounded  text-center bg-warning mb-3 p-3">Programme</h2>
			<p class="rounded bg-light text-dark p-3">{{ matiere.programme }}</p>

		</div>


	</div>

{% endblock %}
