{% extends 'base.html.twig' %}

{% block title %}Accueil Tuteur
{% endblock %}

{% block body %}
<a href="{{ path('app_logout') }}">Se deconnecter</a>
<h1>Bonjour {{ user.prenom }} {{ user.nom }}</h1>
	<h2>Vos apprenants</h2>
	<ul>
		{% for apprenant in apprenants %}
		<li><a href="{{ path('tuteurApprenant', {'apprenantId': apprenant.id}) }}">{{ apprenant.nom }} {{ apprenant.prenom }}</a></li>
		{% endfor %}

	</ul>

	{% endblock %}
