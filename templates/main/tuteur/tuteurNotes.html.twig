{% extends 'base.html.twig' %}

{% block title %}Accueil Formateur
{% endblock %}

{% block body %}
	<h1>Notes de {{ apprenant.prenom }} {{ apprenant.nom }}</h1>
	<table>
		<tr>
			<th>Matière</th>
			<th>Evaluation</th>
			<th>Note</th>
		</tr>
		{% for note in notes %}
			<tr>
				<td>{{ note.matiere.nom }}</td>
				<td>{{ note.evaluation }}</td>
				<td>{{ note.note }}</td>
			</tr>
		{% endfor %}
	</table>
	<a href="{{ path('tuteurHome') }}">Retour à l'accueil tuteur</a>
{% endblock %}
