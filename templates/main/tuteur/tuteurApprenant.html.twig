{% extends 'base.html.twig' %}

{% block title %}Profil apprenant
{% endblock %}

{% block body %}
	<h1>Profil de
		{{ apprenant.prenom }}
		{{ apprenant.nom }}</h1>
	<a href="{{ path('tuteurNotes', {'apprenantId': apprenant.id })}}">Voir les notes</a>
	<h2>Matières</h2>
	<table>

		{% for matiere in matieres %}
			<tr>
				<td>
					{{ matiere.nom }}
				</td>
				<td>
					<a href="{{ path('tuteurMatiere', {'matiereId': matiere.id, 'apprenantId': apprenant.id }) }}">
						<button>Voir le programme</button>
					</a>
				</td>
			</tr>
		{% endfor %}
	</table>
	<a href="{{ path('tuteurHome') }}">Retour à la liste des étudiants</a>
{% endblock %}
